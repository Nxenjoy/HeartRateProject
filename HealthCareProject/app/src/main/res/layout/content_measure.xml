<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HeartRate.UserSetting"
    tools:showIn="@layout/activity_measure"
    tools:deviceIds="wear_round">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Measuring Try to keep still and quiet"
        android:id="@+id/measureDetail"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sensor"
        android:src="@drawable/heartratesensor"
        android:layout_below="@+id/measureDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measure"
        android:id="@+id/btnMeasure"
        android:layout_marginLeft="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtHeartRate"
        android:hint="heart rate"
        android:layout_above="@+id/btnMeasure"
        android:layout_alignStart="@+id/btnMeasure" />


</RelativeLayout>
