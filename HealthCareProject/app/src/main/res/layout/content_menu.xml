<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nl.s5630213023.healthcare.MainActivity"
    tools:showIn="@layout/activity_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/info"
            />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/login"
        android:background="#edd576"
        android:layout_weight="0.08"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/hearticon"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/newheartRate"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/newPressure"
            android:layout_marginLeft="105dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Heart Rate"
            android:id="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Blood pressure"
            android:id="@+id/textView2"
            android:layout_above="@+id/measure"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="80dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="MEASURE"
        android:id="@+id/measure"
        android:background="#f35656"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp" />


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:id="@+id/record"
        android:background="#f08e26"
        android:textColor="#ffffff"
        android:onClick="measure"
        android:layout_marginLeft="100dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercise"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/start"
        android:layout_marginLeft="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        >

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start"
        android:background="#58df3d"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SETTING"
        android:id="@+id/setting"
        android:background="#f65e5959"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/start"
        android:layout_alignStart="@+id/record"
        android:layout_marginLeft="100dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="510dp"
        android:background="#c5eff1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Medical opinion : "
        android:id="@+id/opinion"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="79dp"
        android:autoText="false" />
    </LinearLayout>




</RelativeLayout>
